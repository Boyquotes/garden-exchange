{% extends 'emails/layout_email.html.twig' %}

{% block content %}

    <img src="{{ email.image('@images/logo-garden-exchange.png') }}" alt="Logo Garden Exchange">
    
    <h1>{{ 'email.welcome'|trans }} {{ username }} {{ 'email.welcome.community'|trans }}!</h1>

    <p>
        {{ 'email.welcome.next.step'|trans }}<br />
        {{ 'email.welcome.next.step.1'|trans }}<br />
        {{ 'email.welcome.next.step.2'|trans }}
    <p>
    <p>
        {{ 'email.welcome.next.step.3'|trans }}
    <p>

    <p>
        {{ 'email.you.signed'|trans }}
    </p>
    <p>{{ email.to[0].address }}</p>
    
    <p><a href="https://garden-exchange.org">Aller sur Garden Exchange</a></p>

{% endblock %}
